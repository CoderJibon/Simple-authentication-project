<div class="auth-body">
    <div class="auth-wraper">
        <div class="auth-featured">
            <img src="./images/01.jpg" alt="">
        </div>
        <div class="auth-form">
            <h2>Sign In</h2>        
             
            <% if (message == "Please Verify you Account") { %>
                <p><%= message %> or 
                    <a href="/resentMail/<%= resentMail %>">Resent Mail</a>
                </p>
            <% } else { %>
                <%  red = `border:1px solid red;` %> 
                <p style="color:green;"><%= message %></p>
            <% } %>
            <% if (err) { %>
                <%  red = `border:1px solid red;` %> 
                <p style="color:red;"><%= err %></p>
            <% } %>
            <div class="form-wraper">
                <form action="/login" method="post">
                    <div class="form-group">
                        <label for="">Email</label>
                        <input <% if (err) { %> style="border:1px solid red" <% } %>  name="email" type="text">
                    </div>
                    <div class="form-group">
                        <label for="">Password</label>
                        <input <% if (err) { %> style="border:1px solid red" <% } %>  name="password" type="password">
                    </div>
                    <div class="form-group">
                        <button type="submit">Log In</button>
                    </div>
                </form>
            </div>
            <div class="utility">
                <a href="/forgetPassword">Forgot password</a>
                <a href="/register">Create an account</a>
            </div>
            <div class="social-login">
                <a href="#"><i class="fa fa-facebook"></i></a>
                <a href="#"><i class="fa fa-google"></i></a>
                <a href="#"><i class="fa fa-github"></i></a>
            </div>
        </div>
    </div>
</div>