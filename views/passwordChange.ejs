<div class="profile-body">
  <div class="profile-wraper">
    <div class="profile-info">
      <div class="user info"><%- include('layouts/userInfo.ejs') %></div>
      <hr />
      <div class="user-menu">
        <ul>
          <li>
            <a href="/"><i class="fa fa-user-md"></i> Profile</a>
          </li>
          <li>
            <a href="/profileEdit"><i class="fa fa-edit"></i> Edit</a>
          </li>
          <li class="active">
            <a href="/changePassword"
              ><i class="fa fa-unlock-alt"></i> Change Password</a
            >
          </li>
          <li>
            <a href="/profilePhoto"
              ><i class="fa fa-camera"></i> Profile Photo</a
            >
          </li>
          <li>
            <a href="/gallery"><i class="fa fa-picture-o"></i>Gallery</a>
          </li>
          <li>
            <a href="/friends"><i class="fa fa-users"></i>Find Friends</a>
          </li>
          <li>
            <a href="/logout"><i class="fa fa-sign-out"></i> Logout</a>
          </li>
        </ul>
      </div>
    </div>
    <div class="profile-box">
      <div class="box-content">
        <h2>Change Password</h2>
        <hr />
        <% if (message == "Please Verify you Account") { %>
        <p>
          <%= message %> or
          <a href="/resentMail/<%= resentMail %>">Resent Mail</a>
        </p>
        <% } else { %> <% red = `border:1px solid red;` %>
        <p style="color: green"><%= message %></p>
        <% } %> <% if (err) { %> <% red = `border:1px solid red;` %>
        <p style="color: red"><%= err %></p>
        <% } %>
        <div class="form-wraper">
          <form action="/changePassword" method="post">
            <div class="form-group">
              <label for="">Old Password</label>
              <input name="oldPassword" type="password" />
            </div>
            <div class="form-group">
              <label for="">New Password</label>
              <input name="newPassword" type="password" />
            </div>

            <div class="form-group">
              <label for="">Confirm Password</label>
              <input name="confirmPassword" type="password" />
            </div>
            <div class="form-group">
              <button type="submit">Update</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
